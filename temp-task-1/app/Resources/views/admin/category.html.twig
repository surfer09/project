{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body_id %}all_body{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/admin.css') }}" />
	<link rel="stylesheet" href="{{ asset('assets/css/jquery.dataTables.min.css') }}" />
{% endblock %}

{% block body %}
<div class="wrapper">
	<div class="row all0">
		<div class="container full-width all0">
			{% include 'admin/header.html.twig' %}
			<div class="clearfix"></div>
			<div class="col-md-12 all0">
				<div class="col-md-2 all0">
					{% include 'admin/sidebar.html.twig' %}
				</div>
				<div class="col-md-10">
					<div class="pull-left">
						<div class="page-title">Page Title<span class="page-subtitle">Subtitle</span></div>
					</div>
					<div class="pull-right">
						<ul class="ul-routing all0">
							<li><a href=""><i class="fa fa-tachometer"></i>{{ 'label.home'|trans }}</a></li>
							<li class="separator"><i class="fa fa-chevron-right"></i></li>
							<li><a href="">Examples</a></li>
							<li class="separator"><i class="fa fa-chevron-right"></i></li>
							<li>{{ 'label.blank_page'|trans }}</li>
						</ul>
					</div>
					<div class="clearfix"></div>
					<div class="admin-box">
						<div class="pull-left">
							<div class="title">Title</div>
						</div>
						<div class="pull-right">
							<a href="{{ app.request.getBaseURL() }}/admin/category/new/"><button class="btn-admin"><i class="fa fa-plus"></i>{{ 'label.create'|trans }}</button></a>
							<a href="" class="a-admin-box"><i class="fa fa-minus"></i></a>
							<a href="" class="a-admin-box"><i class="fa fa-close"></i></a>
						</div>
						<div class="clearfix"></div><br />
						<div id="categories_messages"></div>
						<table id="categoriesTable" class="table table-striped table-bordered" width="100%" cellspacing="0" cellpadding="0">
						<thead>
							<td>Id</td>
							<td>{{ 'label.name'|trans }}</td>
							<td>{{ 'label.description'|trans }}</td>
							<td>{{ 'label.image'|trans }}</td>
							<td>{{ 'label.status'|trans }}</td>
							<td>{{ 'label.actions'|trans }}</td>
						</thead>
					</table>
						<div class="clearfix"></div>
					</div>
				</div>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
	<div class="clearfix"></div>
</div>
{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="{{ asset('assets/js/jquery.dataTables.min.js') }}"></script>
	<script type="text/javascript" src="{{ asset('assets/js/functions.js') }}"></script>
	<script type="text/javascript">
		$(document).ready(function()
		{
			var height = $(window).height();

			$(".sidebar").css("height", height+"px");
		});
	</script>
{% endblock %}